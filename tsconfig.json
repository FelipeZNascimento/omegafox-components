{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@src": [
        "./src/"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@styling": [
        "./src/styling/"
      ],
      "@styling/*": [
        "./src/styling/*"
      ],
      "@components": [
        "./src/components/"
      ],
      "@components/*": [
        "./src/components/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}