{
  "name": "@omegafox/components",
  "version": "1.0.3",
  "description": "Omegafox component library using Rollup, TypeScript, Sass and Storybook",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "start": "start-storybook -p 6006",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "generate": "npm plop --plopfile generators/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "src/**/*.tsx": [
      "npm run lint -- --fix",
      "npm run test -- --findRelatedTests --bail"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FelipeZNascimento/omegafox-components.git"
  },
  "keywords": [
    "React",
    "Component",
    "Library",
    "Rollup",
    "Typescript",
    "Sass",
    "Storybook"
  ],
  "author": "Felipe Zanon do Nascimento",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FelipeZNascimento/omegafox-components/issues"
  },
  "homepage": "https://github.com/FelipeZNascimento/omegafox-components#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.4",
    "@semantic-release/npm": "^9.0.1",
    "@storybook/addon-essentials": "6.4.17",
    "@storybook/builder-webpack5": "^6.4.17",
    "@storybook/manager-webpack5": "^6.4.17",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "6.4.17",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "babel-jest": "^27.5.1",
    "classnames": "^2.3.1",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "conventional-changelog-eslint": "^3.0.9",
    "css-loader": "^6.7.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "i": "^0.3.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "npm": "^8.7.0",
    "plop": "^3.0.5",
    "prettier": "^2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-postcss": "^4.0.2",
